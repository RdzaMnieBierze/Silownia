<UserControl x:Class="Ciezarki.MVVM.View.AddProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ciezarki.MVVM.View"
              xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
              xmlns:core="clr-namespace:Ciezarki.Core"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Content="DODAJ SWÓJ PROGRESS" HorizontalAlignment="Center"  VerticalAlignment="Center" FontSize="24" FontWeight="Bold" Grid.ColumnSpan="2"/>
        <TextBox Text="{Binding Weight}" Style="{StaticResource InputTextBox}"
                core:TextBoxHelper.Title="Waga:" 
                core:TextBoxHelper.BorderWidth="200"
                core:TextBoxHelper.BorderHeight="125"
                Grid.Row="1"
                Grid.Column="0"/>        
        <TextBox Text="{Binding Chest}" Style="{StaticResource InputTextBox}"
                core:TextBoxHelper.Title="Klata:" 
                core:TextBoxHelper.BorderWidth="200"
                core:TextBoxHelper.BorderHeight="125"
                Grid.Row="1"
                Grid.Column="1"/>
        <TextBox Text="{Binding Biceps}" Style="{StaticResource InputTextBox}"
                 core:TextBoxHelper.Title="Biceps:" 
                 core:TextBoxHelper.BorderWidth="200"
                 core:TextBoxHelper.BorderHeight="125"
                 Grid.Row="2"
                 Grid.Column="0"/>
        <TextBox Text="{Binding Height}" Style="{StaticResource InputTextBox}"
                 core:TextBoxHelper.Title="Wzrost:" 
                 core:TextBoxHelper.BorderWidth="200"
                 core:TextBoxHelper.BorderHeight="125"
                 Grid.Row="2"
                 Grid.Column="1"/>
        <Button Command="{Binding SaveProgressCommand}" x:Name="AddProgressButton" Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"
                Content="ZAPISZ PROGRESS" Style="{StaticResource GradientButtonStyle}"
                Margin="25"/>

        <lvc:CartesianChart Series="{Binding SeriesCollection}" LegendLocation="Right" Grid.RowSpan="4" Grid.Column="2">
            <lvc:CartesianChart.AxisY>
                <lvc:Axis Title="cm/kg" LabelFormatter="{Binding YFormatter}"></lvc:Axis>
            </lvc:CartesianChart.AxisY>
            <lvc:CartesianChart.AxisX>
                <lvc:Axis Title="Data" Labels="{Binding Labels}"></lvc:Axis>
            </lvc:CartesianChart.AxisX>
        </lvc:CartesianChart>



    </Grid>
</UserControl>
