<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:Ciezarki.Core">
    <Style TargetType="{x:Type TextBox}"
            x:Key="InputTextBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TextBox}">
                    <Border CornerRadius="10"
                            Margin="10,0,10,0"
                            HorizontalAlignment="Center" 
                            BorderThickness="2"
                            Width="{Binding Path=(helpers:TextBoxHelper.BorderWidth), RelativeSource={RelativeSource TemplatedParent}}"
                            Height="{Binding Path=(helpers:TextBoxHelper.BorderHeight), RelativeSource={RelativeSource TemplatedParent}}" BorderBrush="#FF13344E">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#199EC5E5" Offset="0.0"/>
                                <GradientStop Color="#191A4161" Offset="1.0"/>

                            </LinearGradientBrush>
                        </Border.Background>
                        <Grid>
                            <Rectangle StrokeThickness="1"/>
                            <TextBox Margin="1,5,1,1"
                                     Text="{Binding Text, RelativeSource={RelativeSource TemplatedParent}}"
                                     BorderThickness="0"
                                     Background="Transparent"
                                     VerticalContentAlignment="Center"
                                     HorizontalContentAlignment="Center"
                                     TextWrapping="Wrap"
                                     Padding="5"
                                     FontSize="16"
                                     
                                     Foreground="Black"
                                     x:Name="Input"
                                     FontFamily="/Resource/#Poppins"/>
                            <TextBlock IsHitTestVisible="False"
                                       Text="{Binding Path=(helpers:TextBoxHelper.Title), RelativeSource={RelativeSource TemplatedParent}}"
                                       VerticalAlignment="Top"
                                       HorizontalAlignment="Left"
                                       Margin="5"
                                       FontSize="11"
                                       Foreground="Black"
                                       Grid.Column="1">
                            </TextBlock>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>