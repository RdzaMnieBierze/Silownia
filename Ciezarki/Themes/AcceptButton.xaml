<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:helpers="clr-namespace:Ciezarki.Core">
    <Style x:Key="AcceptButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="15"
                    Margin="10, 2, 0, 10" Width="{Binding Path=(helpers:ButtonHelper.ButtonWidth), RelativeSource={RelativeSource TemplatedParent}}">
                        <Border.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,2">
                                <GradientStop Color="#FDE74C" Offset="0.0"/>
                                <GradientStop Color="#7A9D2F" Offset="1.0"/>
                            </LinearGradientBrush>
                        </Border.Background>

                        <TextBlock Text="{TemplateBinding Content}"
                                   FontFamily="Resource/#Poppins"
                                   FontSize="16"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>