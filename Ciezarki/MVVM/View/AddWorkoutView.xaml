<UserControl x:Class="Ciezarki.MVVM.View.AddWorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ciezarki.MVVM.View"
             xmlns:core="clr-namespace:Ciezarki.Core" xmlns:viewmodel="clr-namespace:Ciezarki.MVVM.Viewmodel" d:DataContext="{d:DesignInstance Type=viewmodel:AddWorkoutVM}"
             mc:Ignorable="d" 
             d:DesignHeight="430" d:DesignWidth="700">

<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3.5*"/>
    
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            
            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Name}"
                 core:TextBoxHelper.Title="Nazwa treningu" 
                 core:TextBoxHelper.BorderWidth="450" core:TextBoxHelper.BorderHeight="55"/>
            <DatePicker Width="200" SelectedDate="{Binding Date}"/>
        </StackPanel>




        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Notatki" Text="{Binding Notes}"
                     core:TextBoxHelper.BorderWidth="660" core:TextBoxHelper.BorderHeight="75"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Margin="10,0,10,0  ">
            <ComboBox Width="170" Height="54" ItemsSource="{Binding Exercises}" SelectedItem="{Binding SelectedExercise}">
                <ComboBox.Background>
                    <LinearGradientBrush EndPoint="0,1">
                        <GradientStop/>
                        <GradientStop Offset="1"/>
                    </LinearGradientBrush>
                </ComboBox.Background>
            </ComboBox>
            <TextBox x:Name="textbox_reps" Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Ilość powtórzeń" Text="{Binding Reps}"
                       core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55" Width="130"/>
            <TextBox Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Ilość serii"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55" Width="128" Text="{Binding Sets}"/>
            <TextBox Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Obciążenie" Text="{Binding Load}"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55" Width="128"/>
            <TextBox Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Przerwa [s]" Text="{Binding Rest_time}"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55"/>
        </StackPanel>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Command="{Binding AddExerciseCommand}" Content="Dodaj ćwiczenie"/>
            <Button Grid.Column="1" Command="{Binding LoadExerciseCommand}" Content="Załaduj ćwiczenie"/>
            <Button Grid.Column="2" Command="{Binding EditExerciseCommand}" Content ="Edytuj ćwiczenie"/>
            <Button Grid.Column="3" Command="{Binding DeleteExerciseCommand}" Content ="Usuń ćwiczenie"/>
        </Grid>
  
        <ListBox Grid.Row="4" ItemsSource="{Binding WorkoutExercisess}" SelectedItem="{Binding SelectedWorkoutExercise}"/>
        <Button Content="ZAPISZ TRENING" Command="{Binding SaveWorkout}"  Grid.Row="5"/>
    </Grid>
</UserControl>
