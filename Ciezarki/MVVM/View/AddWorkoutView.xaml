<UserControl x:Class="Ciezarki.MVVM.View.AddWorkoutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ciezarki.MVVM.View"
             xmlns:core="clr-namespace:Ciezarki.Core" xmlns:viewmodel="clr-namespace:Ciezarki.MVVM.Viewmodel" d:DataContext="{d:DesignInstance Type=viewmodel:AddWorkoutVM}"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="960">

<Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1.5*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="3.5*"/>
    
            <RowDefinition Height="1*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">

            <TextBox Style="{StaticResource InputTextBox}" Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                 core:TextBoxHelper.Title="Nazwa treningu" 
                 core:TextBoxHelper.BorderWidth="600" core:TextBoxHelper.BorderHeight="55"/>
            <DatePicker Width="200" SelectedDate="{Binding Date}"/>
        </StackPanel>




        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <TextBox Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Notatki" Text="{Binding Notes,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                     core:TextBoxHelper.BorderWidth="925" core:TextBoxHelper.BorderHeight="85"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.ColumnSpan="2" Margin="5,0,5,0">
            <ComboBox ItemsSource="{Binding Exercises}" SelectedItem="{Binding SelectedExercise,Mode=TwoWay}" Style="{StaticResource StyledComboBox}"
                      core:ComboBoxHelper.HorizontalOffset="-5"/>

            <TextBox x:Name="textbox_reps" Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Ilość powtórzeń" Text="{Binding Reps,Mode=TwoWay}" 
                       core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55"/>
            <TextBox x:Name="textbox_sets" Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Ilość serii"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55" Text="{Binding Sets,Mode=TwoWay}"/>
            <TextBox x:Name="textbox_load" Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Obciążenie" Text="{Binding Load,Mode=TwoWay}"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55"/>
            <TextBox x:Name="textbox_resttime" Style="{StaticResource InputTextBox}" core:TextBoxHelper.Title="Przerwa [s]" Text="{Binding Rest_time,Mode=TwoWay}"
                     core:TextBoxHelper.BorderWidth="100" core:TextBoxHelper.BorderHeight="55"/>
        </StackPanel>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Command="{Binding AddExerciseCommand}" Content="Dodaj ćwiczenie" Style="{StaticResource GradientButtonStyle}"/>
            <Button Grid.Column="1" Command="{Binding LoadExerciseCommand}" Content="Załaduj ćwiczenie" Style="{StaticResource GradientButtonStyle}"/>
            <Button Grid.Column="2" Command="{Binding EditExerciseCommand}" Content ="Edytuj ćwiczenie" Style="{StaticResource GradientButtonStyle}"/>
            <Button Grid.Column="3" Command="{Binding DeleteExerciseCommand}" Content ="Usuń ćwiczenie" Style="{StaticResource GradientButtonStyle}"/>
            <Button Grid.Column="4" Command="{Binding ClearWorkoutCommand}" Content="Wyczyść wszystko" Style="{StaticResource GradientButtonStyle}" />
        </Grid>
  
        <ListBox Grid.Row="4" ItemsSource="{Binding WorkoutsExercisess}" SelectedItem="{Binding SelectedWorkoutExercise}" SelectedIndex="{Binding SelectedWorkoutExercisesIndex}"
                 Style="{StaticResource StyledListBox}"/>
        <Button Content="ZAPISZ TRENING" Command="{Binding SaveWorkoutCommand}"  Grid.Row="5" Style="{StaticResource GradientButtonStyle}"/>
    </Grid>
</UserControl>
