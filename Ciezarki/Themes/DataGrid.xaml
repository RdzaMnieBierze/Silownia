<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Styl dla pojedynczego wiersza DataGrid (analogiczny do ListBoxItem) -->
    <Style TargetType="DataGridRow" x:Key="StyledDataGridRow">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGridRow">
                    <Border x:Name="DGR_Border"
                            Background="{TemplateBinding Background}"
                            SnapsToDevicePixels="True"
                            CornerRadius="5"
                            Padding="{TemplateBinding Padding}">
                        <DataGridCellsPresenter />
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="DGR_Border" Property="Background" Value="#6613344E" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="DGR_Border" Property="Background" Value="#3313344E" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Foreground" Value="#FF888888" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Styl dla nagłówków kolumn DataGrid -->
    <Style TargetType="DataGridColumnHeader" x:Key="StyledDataGridColumnHeader">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Poppins" />
        
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Padding" Value="10,4" />
        <Setter Property="HorizontalContentAlignment" Value="Center" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
    </Style>

    <!-- Styl dla DataGrid -->
    <Style TargetType="DataGrid" x:Key="StyledDataGrid">
        <Setter Property="Foreground" Value="Black" />
        <Setter Property="FontSize" Value="14" />
        <Setter Property="FontFamily" Value="Poppins" />
        <Setter Property="BorderBrush" Value="{StaticResource ComboBoxBorderBrush}" />
        <Setter Property="BorderThickness" Value="2" />
        <Setter Property="Background" Value="Transparent"/>
        <!-- Właściwości blokujące edycję i dodawanie wierszy -->
        <Setter Property="IsReadOnly" Value="True"/>
        <Setter Property="CanUserAddRows" Value="False"/>
        <Setter Property="CanUserDeleteRows" Value="False"/>
        <!-- Ustawienie stylu wierszy -->
        <Setter Property="RowStyle" Value="{StaticResource StyledDataGridRow}" />
        <Setter Property="ColumnHeaderStyle" Value="{StaticResource StyledDataGridColumnHeader}" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="DataGrid">
                    <Border x:Name="Border"
                            CornerRadius="10"
                            Background="{StaticResource ComboBoxBackgroundBrush}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            Padding="5"
                            SnapsToDevicePixels="True"
                            Margin="10">
                        <ScrollViewer Focusable="false"
                                      Padding="0"
                                      HorizontalScrollBarVisibility="Disabled"
                                      VerticalScrollBarVisibility="Auto">
                            <ItemsPresenter />
                        </ScrollViewer>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>
